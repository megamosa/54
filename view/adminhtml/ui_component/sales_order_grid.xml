<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    
    <dataSource name="sales_order_grid_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider</argument>
            <argument name="name" xsi:type="string">sales_order_grid_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">entity_id</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>
    
    <!-- Add filters configuration -->
    <listingToolbar name="listing_top">
        <filters name="listing_filters">
            <filterSelect name="governorate" provider="${ $.parentName }">
                <settings>
                    <options class="MagoArab\OrderEnhancer\Model\Config\Source\GovernorateOptions"/>
                    <caption translate="true">Select Governorate</caption>
                    <label translate="true">Governorate</label>
                    <dataScope>governorate</dataScope>
                </settings>
            </filterSelect>
        </filters>
    </listingToolbar>
    
    <columns name="sales_order_columns">
        <!-- Order ID Column -->
        <column name="increment_id" sortOrder="5">
            <settings>
                <filter>text</filter>
                <label translate="true">Order ID</label>
                <visible>true</visible>
            </settings>
        </column>
        
        <!-- Order Date -->
        <column name="created_at" sortOrder="10">
            <settings>
                <filter>dateRange</filter>
                <label translate="true">Order Date</label>
                <visible>true</visible>
                <sorting>desc</sorting>
            </settings>
        </column>
        
        <!-- Order Name (from shipping address only) -->
        <column name="order_name" sortOrder="20" class="MagoArab\OrderEnhancer\Ui\Component\Listing\Column\OrderName">
            <settings>
                <filter>text</filter>
                <label translate="true">Order Name</label>
                <visible>true</visible>
                <dataType>text</dataType>
            </settings>
        </column>
        
        <!-- Customer Email -->
        <column name="customer_email" sortOrder="25">
            <settings>
                <filter>text</filter>
                <label translate="true">Customer Email</label>
                <visible>true</visible>
            </settings>
        </column>
        
        <!-- Phone Number -->
        <column name="phone_number" sortOrder="30" class="MagoArab\OrderEnhancer\Ui\Component\Listing\Column\PhoneNumber">
            <settings>
                <filter>text</filter>
                <label translate="true">Phone Number</label>
                <visible>true</visible>
                <dataType>text</dataType>
            </settings>
        </column>
        
        <!-- Alternative Phone -->
        <column name="alternative_phone" sortOrder="40" class="MagoArab\OrderEnhancer\Ui\Component\Listing\Column\AlternativePhone">
            <settings>
                <filter>text</filter>
                <label translate="true">Alternative Phone</label>
                <visible>true</visible>
                <dataType>text</dataType>
            </settings>
        </column>
        
        <!-- Order Comments -->
        <column name="order_comments" sortOrder="50" class="MagoArab\OrderEnhancer\Ui\Component\Listing\Column\OrderComments">
            <settings>
                <filter>text</filter>
                <label translate="true">Order Comments</label>
                <visible>true</visible>
                <dataType>text</dataType>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
            </settings>
        </column>
        
        <!-- Order Status -->
        <column name="status" sortOrder="60">
            <settings>
                <filter>select</filter>
                <label translate="true">Order Status</label>
                <visible>true</visible>
                <dataType>select</dataType>
                <options class="Magento\Sales\Ui\Component\Listing\Column\Status\Options"/>
            </settings>
        </column>
        
        <!-- Governorate with Dropdown Filter -->
        <column name="governorate" sortOrder="70" class="MagoArab\OrderEnhancer\Ui\Component\Listing\Column\Governorate">
            <settings>
                <filter>select</filter>
                <label translate="true">Governorate</label>
                <visible>true</visible>
                <dataType>select</dataType>
                <options class="MagoArab\OrderEnhancer\Model\Config\Source\GovernorateOptions"/>
            </settings>
        </column>
        
        <!-- City -->
        <column name="city" sortOrder="90" class="MagoArab\OrderEnhancer\Ui\Component\Listing\Column\City">
            <settings>
                <filter>text</filter>
                <label translate="true">City</label>
                <visible>true</visible>
                <dataType>text</dataType>
            </settings>
        </column>
        
        <!-- Street Address -->
        <column name="street_address" sortOrder="100" class="MagoArab\OrderEnhancer\Ui\Component\Listing\Column\StreetAddress">
            <settings>
                <filter>text</filter>
                <label translate="true">Street Address</label>
                <visible>true</visible>
                <dataType>text</dataType>
            </settings>
        </column>
        
        <!-- Total Quantity Ordered -->
        <column name="total_qty_ordered" sortOrder="110">
            <settings>
                <filter>text</filter>
                <label translate="true">Total Quantity Ordered</label>
                <visible>true</visible>
                <dataType>number</dataType>
            </settings>
        </column>
        
        <!-- Item Details -->
        <column name="item_details" sortOrder="120" class="MagoArab\OrderEnhancer\Ui\Component\Listing\Column\ItemDetails">
            <settings>
                <filter>text</filter>
                <label translate="true">Item Details</label>
                <visible>true</visible>
                <dataType>text</dataType>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
            </settings>
        </column>
        
        <!-- Item Price -->
        <column name="item_prices" sortOrder="130" class="MagoArab\OrderEnhancer\Ui\Component\Listing\Column\ItemPrices">
            <settings>
                <filter>text</filter>
                <label translate="true">Item Price</label>
                <visible>true</visible>
                <dataType>text</dataType>
            </settings>
        </column>
        
        <!-- Subtotal -->
        <column name="subtotal" sortOrder="140">
            <settings>
                <filter>text</filter>
                <label translate="true">Subtotal</label>
                <visible>true</visible>
                <dataType>price</dataType>
            </settings>
        </column>
        
        <!-- Shipping Amount -->
        <column name="shipping_and_handling" sortOrder="150">
            <settings>
                <filter>text</filter>
                <label translate="true">Shipping Amount</label>
                <visible>true</visible>
                <dataType>price</dataType>
            </settings>
        </column>
        
        <!-- Discount Amount -->
        <column name="discount_amount" sortOrder="160">
            <settings>
                <filter>text</filter>
                <label translate="true">Discount Amount</label>
                <visible>true</visible>
                <dataType>price</dataType>
            </settings>
        </column>
        
        <!-- Grand Total -->
        <column name="grand_total" sortOrder="170">
            <settings>
                <filter>text</filter>
                <label translate="true">Grand Total</label>
                <visible>true</visible>
                <dataType>price</dataType>
            </settings>
        </column>
        
        <!-- Hide unnecessary columns -->
        <column name="store_id">
            <settings>
                <visible>false</visible>
            </settings>
        </column>
        <column name="base_grand_total">
            <settings>
                <visible>false</visible>
            </settings>
        </column>
        <column name="billing_name">
            <settings>
                <visible>false</visible>
            </settings>
        </column>
        <column name="shipping_name">
            <settings>
                <visible>false</visible>
            </settings>
        </column>
        <column name="billing_address">
            <settings>
                <visible>false</visible>
            </settings>
        </column>
        <column name="shipping_address">
            <settings>
                <visible>false</visible>
            </settings>
        </column>
    </columns>
</listing>